<header class="home-header">
        <h1><a href="/">Quiz Hub</a></h1>
        <nav>
            <ul>
                <li>
                    <a href="/createQuiz">Create</a>
                </li>
                <li>
                    <a href="/scores">Scores</a>
                </li>
                <li>
                    <div class="dropdown dropbtn">
                    <a href="/highscores">Categories</a>
                    <i class="fa fa-caret-down"></i>
                    <div class="dropdown-content">
                        {{#each categories as |category|}}
                        <a href="/category/{{category.id}}">{{category.category_name}}</a>
                        {{/each}}
                    </div>
                    </div>
                </li>
                <li>
                    <a href="#" id="logout">Logout</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
    <main>
        <h2> Create your very own quiz below &#8595; </h2>
    <div>
    <form class="quizform">
        <div class="container">
          
            <input type="text" id="question" placeholder="Question" name="Question" required>
            <input type="text" id="correctAnswer" placeholder="Correct Answer" name="Correct Answer" required>
            <input type="text" id="wrong1" placeholder="Wrong Answer 1" name="Wrong Answer" required>
            <input type="text" id="wrong2" placeholder="Wrong Answer 2" name="Wrong Answer" required>
            <input type="text" id="wrong3" placeholder="Wrong Answer 3" name="Wrong Answer" required>
    
            <button id="newQ"> Add another question </button>
            
          <button id="submitQ" class="newuserbtn">-or- Submit your quiz!</button>
         
        </div>
     
      </form>
      </div>
    </main>

    <script src="/js/createQuestions.js"></script>
    <script src="/js/logout.js"></script>